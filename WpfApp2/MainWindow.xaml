<Window x:Class="WpfApp2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="525">
    <Grid>
        <ListBox SelectedItem="{Binding SelectedPacient}" ItemsSource="{Binding PacientList,UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Left" Height="202" Margin="22,73,0,0" VerticalAlignment="Top" Width="100">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                    <Label Content="{Binding Name,UpdateSourceTrigger=PropertyChanged}"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <Button Content="Új beteg" Click="New_Pacient" HorizontalAlignment="Left" Margin="362,73,0,0" VerticalAlignment="Top" Width="75"/>
        <Button Content="Adatok modosítása" Click="DataMod_Clik" HorizontalAlignment="Left" Margin="362,121,0,0" VerticalAlignment="Top" Width="135"/>
        <Button Content="Kezelés" HorizontalAlignment="Left" Margin="389,170,0,0" VerticalAlignment="Top" Width="75" Click="Handler_Click"/>

    </Grid>
</Window>
